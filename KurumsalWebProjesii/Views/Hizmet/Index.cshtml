@model IEnumerable<KurumsalWebProjesii.Models.Model.Hizmet>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-dark" href="/Hizmet/Create">Yeni Ekle</a>

<table class="table table-striped ">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Başlık</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Resim URL</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @*modelimizden gelen forachle verileir eklememiz lazım->tabloya*@
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Hizmetıd</th>
                <td>@item.Baslık</td>
                <td>@Html.Raw(item.Acıklama)</td>
                <td><img width="100" height="100" src="@item.ResimURL" /></td>
                <td>
                 <a href="/Hizmet/Edit/@item.Hizmetıd">Düzenle</a><a href="/Hizmet/Delete/@item.Hizmetıd">Sil</a>
                </td>

            </tr>
        }



    </tbody>
</table>

