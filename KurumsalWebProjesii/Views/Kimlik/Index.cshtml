@model IEnumerable<KurumsalWebProjesii.Models.Model.Kimlik>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



        <p>
            yeni kayıt ekleme listesi
            @Html.ActionLink("Yeni Ekle", "Create")
        </p>
        <table class="table table-bordered ">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.KeyWords)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LogoURL)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Unvan)
                </th>
                <th>
                    İşlemler
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KeyWords)
                    </td>
                    <td>
                        @Html.Raw(item.Description)
                    </td>
                    <td>
                        @*bende yok img responsive classı*@
                        <img class="img-fluid"  src="@item.LogoURL" width="300" height="200"/>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unvan)
                    </td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.Kimlikıd }) |


                    </td>
                </tr>
            }

        </table>

